<h1 class="text-center text-4xl font-bold text-gray-800 mt-4">Competition leader board</h1>
<br>
<table class="table-auto border-collapse">
  <% @competition_user_predictions.first.users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <% score = 0 %>
      <% user.match_predictions.each do |prediction| %>
          <% unless prediction.result == "pending" %>
          <% score += prediction.result.to_i %>
          <% end %>
      <% end %>
      <td><%= score %></td>
    </tr>
  <% end %>
</table>
