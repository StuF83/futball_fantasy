<h1 class="text-center text-4xl font-bold text-gray-800 mt-4">Add players to competition</h1>
<br>
<ul>
  <%= form_with model: @competition do |field| %>
    <%= field.collection_check_boxes :user_ids, User.includes(:competitions).where(competitions: { id: nil }, approved: true).order(:email), :id, :email, {include_hidden: false, checked: @competition.users.map(&:id)} do |box| %>
        <li>
          <%= box.label  %>
          <%= box.check_box %>
        </li>
    <% end %>
    <br>
    <%= field.submit "Add Players", class: 'custom-button' %>
  <% end %>
</ul>
