<p>hello from competitions show</p>

<p><%= link_to 'Your Competitions Home Page', competitions_path%></p>

<% @users.each do |user| %>
  <p><%= user.email %></p>
  <% user.match_predictions.each do |match_prediction| %>
    <ul>
      <li><%= match_prediction.match.home_team %> vs <%= match_prediction.match.away_team %></li>
      <li>Prediction <%= match_prediction.home_score_guess %> - <%= match_prediction.away_score_guess %></li>
      <li>Actual Score <%= match_prediction.match.home_score %> - <%= match_prediction.match.away_score %></li>
      <br>
    </ul>
  <% end %>
<% end %>
