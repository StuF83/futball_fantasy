<p>hello from competitions show</p>

<p><%= link_to 'Your Competitions Home Page', competitions_path%></p>

<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.id %></td>
    </tr>
  <% end %>
</table>

<table>
  <% @match_and_predictions.each do |match| %>
    <tr>
      <td><%= match.home_team %></td>
      <td><%= match.away_team %></td>
      <td><%= match.home_score %></td>
      <td><%= match.away_score %></td>
      <td><%= match.match_predictions[0].home_score_guess %></td>
      <td><%= match.match_predictions[0].away_score_guess %></td>
    </tr>
  <% end %>

</table>
