<div class="flex flex-col justify-center items-center min-h-screen font-inter">
  <div class="flex flex-col justify-between bg-slate-300 p-12 rounded-xl text-2xl">
    <h2 class="flex justify-center font-inter font-bold">Super 10 Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

        <div class="field my-4">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field my-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: "italic" %>
      </div>

      <div class="field my-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <div class="flex justify-center">
          <%= f.submit "Sign up", class: 'custom-button bg-steelblue text-white no-underline font-bold py-2 px-6 rounded-full hover:bg-steelblue hover:text-black transition duration-300 ease-in-out' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>

  </div>

