<div class="flex justify-center items-center h-full font-inter">
  <div class="bg-slate-300 mt-16 mb-16 p-12 rounded-xl text-2xl">
    <h2 class="flex justify-center font-inter font-bold">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send reset instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

